<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/head.ejs') %>

    <body>
        <div class="container-fluid d-flex flex-column px-0" style="min-height: 100vh;">
        
            <%- include('../layouts/navbar.ejs') %>
    
<div class="position-relative">
    <div class="container py-5">
                <div class="row">
                    <div class="col-md-6 d-flex align-items-center">
                        <img src="./images/registerImg.svg" class="img-fluid rounded" alt="...">
                    </div>
                    <div class=" card p-0 shadow rounded col-md-6 ">
                        <div class="card-body d-flex px-5 justify-content-center flex-column">
                            <h5 class="card-title">Admin Login</h5>
                            <form action="/adminLogin" method="POST" class="needs-validation" novalidate>
                                <div class="form-floating mb-3">
                                    <input type="username" class="form-control" id="floatingInput"
                                        placeholder="name@example.com" name="username">
                                    <label for="floatingInput">Username</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="floatingPassword"
                                        placeholder="Password" name="password">
                                    <label for="floatingPassword">Password</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>


            <%- include('../layouts/footer.ejs') %>

</div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/formValidation.js"></script>
    </body>


</html>
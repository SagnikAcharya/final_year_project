<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/head.ejs') %>

    <body>

        <section>
            <%- include('../layouts/navbar.ejs') %>
        </section>

        <section>
            <div class="container width-adjust col-4 my-5 shadow rounded-3 px-5 py-5">
                <header class="header">
                    <h1 id="title" class="text-center">Add a new Event</h1>
                </header>
                <div class="form-wrap">
                    <form id="survey-form" method="POST" action="/addEvent" class="needs-validation" novalidate
                        enctype="multipart/form-data">
                        <div class="row my-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label id="name-label" for="name" class="my-1 fw-bold">Event Name</label>
                                    <input type="text" name="event[Name]" id="name" placeholder="Enter event name"
                                        class="form-control" required>

                                </div>
                            </div>
                        </div>
                        <div class="row my-2 ">
                            <div class="col-md-12">
                                <div class="form-group mb-2">
                                    <label id="name-label" for="auto" class="my-1 fw-bold">Event Location</label>
                                    <input type="text" id="auto" name="event[Location]"
                                        class="search-outer form-control " placeholder="Search places" required>

                                </div>
                                <div id="map" class="rounded-3" style="max-height: 250px;"></div>
                            </div>
                        </div>

                        <div class="row my-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="startDate" class="my-1 fw-bold">Event Start Date </label>
                                    <input id="startDate" class="form-control" type="datetime-local" name="event[EventDate]"
                                        placeholder="Enter event date" required/>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="my-1 fw-bold" for="limit">Registration Limit</label>
                                    <input id="limit" class="form-control" type="number" name="event[limit]" min="0" max="100"
                                        placeholder="Enter Student limit" required />
                                </div>
                            </div>
                        </div>

                        <div class="row my-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="dropdown" class="my-1 fw-bold">Event Type</label>
                                    <select id="dropdown" name="event[Type]" class="form-control" required>
                                        <option disabled selected value>Select Event Type</option>
                                        <option value="Webinar">Webinar</option>
                                        <option value="Seminar">Seminar</option>
                                        <option value="Fest">Fest</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label">Event Image/Poster</label>
                            <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                        </div>
                        <div class="row my-2">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="my-1 fw-bold">Event Description</label>
                                    <textarea id="comments" class="form-control" name="event[Description]" placeholder="Enter event description"
                                        required></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row my-3">
                            <div class="d-grid gap-2">
                                <button type="submit" id="submit" class="btn btn-primary btn-block my-2 py-2 fw-bold">Add New
                                    Event</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </section>

        <section>
            <%- include('../layouts/footer.ejs') %>
        </section>

        <style>
            body {
                margin: 0
            }

            #map {
                width: 100%;
                height: 100vh;
                margin: 0;
                padding: 0;
            }

            #auto {
                z-index: 999;
                font-size: 15px;
                padding: 10px;
                border: 1px solid #ddd;
                outline: none !important;
                top: 5px;
            }
        </style>

        <script src="/js/mapSearch.js"></script>
        <script src="/js/script.js"></script>
        <script src="/js/flatpickr.js"></script>
        <script src="/js/formValidation.js"></script>



    </body>


</html>
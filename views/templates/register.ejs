<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/head.ejs') %>

    <body>

    <section>
            <%- include('../layouts/navbar.ejs') %>
        </section>

        <section class="my-5 position-relative">
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-6">
                        <img src="./images/registerImg.svg" class="img-fluid rounded" alt="...">
                    </div>
                    <div class=" card p-0 shadow rounded col-md-6 " style="height: inherit;">
                        <div class="card-body d-flex px-5 justify-content-center flex-column">
                            <h5 class="card-title my-3">Register</h5>
                            <form action="/register" method="POST" class="needs-validation" novalidate>
                                <div class="form-floating mb-3">
                                    <input type="username" class="form-control" id="floatingInput" placeholder="name@example.com" name="username">
                                    <label for="floatingInput">Username</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                                    <label for="floatingInput">Email address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="department" name="department">
                                    <label for="floatingInput">Department</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" placeholder="Phone No" name="mobile">
                                        <label for="floatingInput">Phone No.</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingid" placeholder="Id" name="admin_id">
                                        <label for="floatingid">Admin Id</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
                                    <label for="floatingPassword">Password</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                                </div>
                                </div>
                </div>
                
                </div>
        </section>
        
        <section>
            <%- include('../layouts/footer.ejs') %>
        </section>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/formValidation.js"></script>
    </body>


</html>